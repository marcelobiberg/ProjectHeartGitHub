@model ProjectHeart.Models.Account
@{
    ViewBag.Title = "EDITAR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--rola scroll top, ao abrir pgina, stand by learn-->
<script type="text/javascript">

    $('html, body').animate({ scrollTop: $('#nome').offset().top - 100 }, 'slow');
    $('#nome').select


</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <!--headr-->
                <div class="header">
                    <h2 style="text-align:center;">
                        @ViewBag.Title USUÁRIO DO SISTEMA
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="@Url.Action("Index","Account")">Buscar usuário</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.ID_USER)
                    
                    <!--start edit-->
                    <br />
                    <div class="row clearfix">
                        <div class="col-md-4">
                            <b>E-mail</b>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">email</i>
                                </span>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "example@example.com", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <b>Senha</b>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="material-icons">location_on</i>
                                </span>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.SENHA, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                                    @Html.ValidationMessageFor(model => model.SENHA, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <b>Tipo profissional</b>
                                <div class="form-line">
                                    @Html.DropDownListFor(model => model.TIPO, new SelectList(new[] { "Selecione tipo","Médico", "Recepcionista", "Administrador" }), new { htmlAttributes = new { @class = "form-control show-tick" } })
                                </div>
                        </div>

                    </div> 

                    <hr />
                    <div class="row clearfix">
                        <div class="col-md-2">
                            <div class="form-line align-right">
                                <button class="btn bg-teal btn-lg waves-effect" type="submit">SALVAR</button>
                                @Html.ActionLink("Voltar", "Index", new { id = Model.ID_USER }, htmlAttributes: new { @class = "btn bg-black btn-warning btn-lg waves-effect" })<span>&emsp;</span>
                                @*<button class="btn bg-black btn-warning btn-lg waves-effect" type="button" onclick="location.href='@Url.Action("Index","Account")'">VOLTAR</button>*@
                            </div>
                        </div>
                    </div>
                    <!--end start edit-->

                </div>
            </div>
        </div>
    </div>


}

