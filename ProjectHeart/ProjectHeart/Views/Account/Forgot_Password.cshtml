@model ProjectHeart.Models.ForgotPassword
@{

    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In | Medilab Plus</title>
    <!-- Favicon-->
    @*<link rel="icon" href="~/AssetMainPage/Admin/favicon.ico" type="image/x-icon">*@

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    @Styles.Render("~/plugins/bootstrap/css/")
    @*<link href="../../plugins/bootstrap/css/bootstrap.css" rel="stylesheet">*@

    <!-- Waves Effect Css -->
    @Styles.Render("~/Plugins/node-waves/css")
    @*<link href="../../plugins/node-waves/waves.css" rel="stylesheet" />*@

    <!-- Animation Css -->
    @Styles.Render("~/Plugins/animate-css")
    @*<link href="../../plugins/animate-css/animate.css" rel="stylesheet" />*@

    <!-- Custom Css -->
    @Styles.Render("~/Content/MainPage/css")
    @*<link href="../../css/style.css" rel="stylesheet">*@
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">Medilab<b>+</b></a>
            <small>BootStrap Based - Material Design</small>
        </div>
        <div class="card">
            <!--body login-->
            <div class="body">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    <div class="msg">
                        Entre com seu e-mail de cadastro, vammos enviar um e-mail com o reset da senha.
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            @Html.EditorFor(model => Model.EMAIL, new { htmlAttributes = new { @type = "email", @class = "form-control", @name = "username", placeholder = "E-mail", @autofocus = true } })
                            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">EVIAR SENHA VIA E-MAIL</button>
                    <div class="row m-t-20 m-b--5 align-center">
                        @Html.ActionLink("ENTRAR!", "Index")
                    </div>
                }
            </div>
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        </div>
    </div>

    <!-- Jquery Core Js -->
    @Scripts.Render("~/plugins/jquery")

    <!-- Bootstrap Core Js -->
    @Scripts.Render("~/Plugins/bootstrap")

    <!-- Waves Effect Plugin Js -->
    @Scripts.Render("~/Plugins/node-waves")

    <!-- Validation Plugin Js -->
    @Scripts.Render("~/bundles/jquery-validation")

    <!-- Custom Js -->
    @Scripts.Render("~/bundles/MainPage")
    @Scripts.Render("~/bundles/MainPage/sign-in")
</body>
</html>
