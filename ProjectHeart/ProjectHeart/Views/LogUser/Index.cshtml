@model ProjectHeart.Models.LogUser

@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Login Project Heart</title>



    <link rel="stylesheet" href="~/Content/LogUserIndex/styleLogin.css">

</head>
<body>
    <hgroup>
        <h1>Log In</h1>
        <h3>Project Heart</h3>
    </hgroup>
    @using (Html.BeginForm("Index", "LogUser", FormMethod.Post))
    {
    @Html.AntiForgeryToken()

        <div class="group">

            @Html.EditorFor(model => Model.EMAIL, new { htmlAttributes = new { @type= "email" } }) <span class="highlight"></span><span class="bar"></span>
            @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            <label>E-mail</label>
        </div>
        <div class="group">
            @Html.EditorFor(model => Model.SENHA, new { htmlAttributes = new { @type = "password" } }) <span class="highlight"></span><span class="bar"></span>
            @Html.ValidationMessageFor(model => model.SENHA, "", new { @class = "text-danger" })
            <label>Senha</label>
        </div>
        <label class="group">
            <a style="color:red">@ViewData["UserNotFOund"]</a>
        </label>
        <div class="space"></div>
        <br />
        <button type="submit" class="button buttonBlue">
            Entrar
            <div class="ripples buttonRipples"><span class="ripplesCircle"></span></div>
        </button>

    }
    @*<footer>
        <a href="http://www.polymer-project.org/" target="_blank"><img src="https://www.polymer-project.org/images/logos/p-logo.svg"></a>
    </footer>*@
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Scripts/LogUserIndex/indexLogin.js"></script>


</body>
</html>
